<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorSign_inBackground"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"

        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/img_sign_in" />
    <LinearLayout
        android:id="@+id/line_user_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="3">

        <EditText
            android:id="@+id/edittext_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/img_sign_in_user"
            android:hint="   Tên đăng nhập"
            android:textColorHint="@color/colorSign_inIcon"
            android:textColor="@color/colorSign_inIcon"
            android:backgroundTint="@color/colorSign_inIcon"

            />
        <EditText
            android:id="@+id/edittext_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/img_sing_in_pass"
            android:hint="   Mật khẩu"
            android:textColorHint="@color/colorSign_inIcon"
            android:textColor="@color/colorSign_inIcon"
            />
        <Button
            android:id="@+id/button_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textColor="@android:color/white"
            android:background="@color/colorSign_inIcon"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.1"
        >
        <Button
            android:id="@+id/button_skip_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSign_inBackground"
            android:textColor="@android:color/white"
            android:text="Bỏ qua đăng nhập"/>
    </LinearLayout>
</LinearLayout>